<div class='clearfix'>
  <ul class='nav nav-pills pull-right'>
    {{#link-to 'index' (query-params layout='list') tagName='li' title='list'}}<a href='javascript://;'><i class='fa fa-list fa-4x'></i></a>{{/link-to}}
    {{#link-to 'index' (query-params layout='thumbs') tagName='li' title='list'}}<a href='javascript://;'><i class='fa fa-th fa-4x'></i></a>{{/link-to}}
    {{#link-to 'index' (query-params layout='big thumbs') tagName='li' title='list'}}<a href='javascript://;'><i class='fa fa-th-large fa-4x'></i></a>{{/link-to}}
  </ul>
</div>
<hr>
<div class='container' id='userList'>
  <div class='row'>
    {{#each itemController='user'}}
    <div {{bind-attr class='isList:col-xs-4: isThumbs:col-xs-3: isBigThumbs:col-xs-6:'}}>
      <div class='well'>
        <a href='' ng-click='showUserModal($index)'><img {{bind-attr src=picture.medium}} class='img-responsive'></a>
        {{#unless isList}}
        <h3 class='cap'>{{name.first}}</h3>
        {{/unless}}
        {{#if isBigThumbs}}
        <p>
        {{location.city}}, {{location.state}} {{location.zip}}<br>
        {{phone}}
        </p>
        {{/if}}
      </div>
    </div>
    {{#if isList}}
    <div class='col-xs-8'>
      <h2 class='cap'>{{name.first}} {{name.last}} <i {{bind-attr class=':fa isMale:fa-male:fa-female'}}></i></h2>
      <div class='row'>
        <div class='col-sm-6'>
          <p>
          {{location.city}}, {{location.state}} {{location.zip}}<br>
          {{phone}}
          </p>
        </div>
        <div class='col-sm-6 text-right'>
          <div class='hidden-xs'>
            <a href=''>{{email}}</a><br>
            <h3><span class='label label-primary'>{{username}}</span></h3>
          </div>
        </div>
      </div>
    </div>
    <div class='clearfix'></div>
    {{/if}}
    {{/each}}
  </div>
  <hr>
</div>
