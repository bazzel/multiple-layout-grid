{{#modal-dialog title=fullName action='closeModal'}}
<div class='row'>
  <div class='col-xs-4 col-xs-offset-4'><img {{bind-attr src=picture.large}} class='img-thumbnail img-responsive img-circle'></div>
</div>
<hr>
<div class='row'>
  <h4 class='text-center'><i class='fa fa-fw fa-map-marker fa-2x'></i> {{location.street}} {{location.city}}, {{location.state}}</h4>
  <h4 class='text-center'><i class='fa fa-fw fa-phone fa-2x'></i> {{cell}}</h4>
  <h4 class='text-center'><i class='fa fa-fw fa-envelope-o fa-2x'></i> {{email}}</h4>
  <h4 class='text-center'><i class='fa fa-fw fa-user fa-2x'></i> {{username}}</h4>
</div>
{{/modal-dialog}}
